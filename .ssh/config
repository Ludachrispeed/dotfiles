Host *
    #ForwardAgent yes

Host github.com
    HostName       github.com
    User           git
    IdentityFile   ~/.ssh/github
    IdentitiesOnly yes

Host bitbucket.org
    HostName       bitbucket.org
    User           git
    IdentityFile   ~/.ssh/bitbucket
    IdentitiesOnly yes

Host git.sv.gnu.org
    HostName       git.sv.gnu.org
    User           git
    IdentityFile   ~/.ssh/gnu
    IdentitiesOnly yes
